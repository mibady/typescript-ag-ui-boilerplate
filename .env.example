# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Supabase (Database + RAG)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJxxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJxxxxx

# For production, use the Transaction-mode connection string from Supabase dashboard (Settings > Database)
# This enables connection pooling with PgBouncer for serverless environments.
DATABASE_URL="postgres://postgres:[YOUR-PASSWORD]@[YOUR-HOST]:6543/postgres"

# Upstash Redis (Cache, Events, Rate Limiting)
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxx

# Upstash Vector (RAG, Semantic Search)
UPSTASH_VECTOR_REST_URL=https://xxxxx-vector.upstash.io
UPSTASH_VECTOR_REST_TOKEN=xxxxx

# Upstash Search (Full-Text Search with BM25)
UPSTASH_SEARCH_REST_URL=https://xxxxx-search.upstash.io
UPSTASH_SEARCH_REST_TOKEN=xxxxx

# Upstash QStash (Background Jobs, Webhooks)
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=xxxxx
QSTASH_CURRENT_SIGNING_KEY=xxxxx
QSTASH_NEXT_SIGNING_KEY=xxxxx

# LLM Providers (At least ONE required)
OPENAI_API_KEY=sk-xxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxx
GOOGLE_GENERATIVE_AI_API_KEY=xxxxx
MISTRAL_API_KEY=xxxxx

# Sanity CMS (Marketing Content)
NEXT_PUBLIC_SANITY_PROJECT_ID=xxxxx
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=xxxxx

# Resend (Email)
RESEND_API_KEY=re_xxxxx

# Arcjet (Security & Rate Limiting)
ARCJET_KEY=ajkey_xxxxx

# Stripe (Billing) - Required for Phase 6
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# Webhook secret from: https://dashboard.stripe.com/webhooks
# Endpoint URL: https://yourdomain.com/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Sentry (Monitoring) - Optional
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

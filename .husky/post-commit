#!/bin/sh

echo ""
echo "============================================================"
echo "📤 REMINDER: Push your commit to GitHub!"
echo "============================================================"
echo ""
echo "Your commit is saved LOCALLY only."
echo ""

# Count unpushed commits
UNPUSHED=$(git log @{u}.. --oneline 2>/dev/null | wc -l)

if [ "$UNPUSHED" -gt 0 ]; then
  echo "⚠️  You have $UNPUSHED unpushed commit(s)"
  echo ""
  echo "Recent unpushed commits:"
  git log @{u}.. --oneline --max-count=5 2>/dev/null
  echo ""
  echo "🚨 IMPORTANT: Run 'git push origin main' to push to GitHub!"
  echo ""
else
  echo "✅ All commits are already pushed to remote"
fi

echo "============================================================"
echo ""

# Always exit 0 so commit is not blocked
exit 0
